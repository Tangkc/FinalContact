<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="com.jc.android.contact.presentation.RowUserBinding">

    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_row"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/catalog"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#E0E0E0"
            android:paddingBottom="4dp"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:textColor="#454545"
            tools:text="A" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:buttonTint="#666666"
                android:visibility="gone"
                tools:visibility="visible" />

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:buttonTint="#666666"
                tools:visibility="visible" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/row_contact_imageView2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="4dp"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/no_pic" />

            <TextView
                android:id="@+id/title"
                style="@style/contact_list_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                tools:text="I am the king of the word!Oh hahahahaha" />

        </LinearLayout>

    </LinearLayout>

</layout>