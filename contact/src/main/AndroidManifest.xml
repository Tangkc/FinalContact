<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jc.android.module.contact">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.jc.android.base.presentation.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.jc.android.contact.presentation.view.activity.ContactListActivity"
            android:label="@string/activity_title_user_list"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.jc.android.contact.presentation.view.activity.ContactTreeActivity"
            android:label="@string/activity_title_user_list"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.jc.android.contact.presentation.view.activity.ContactDetailsActivity"
            android:label="@string/activity_title_user_details" />
        <activity
            android:name="com.jc.android.contact.presentation.view.activity.ContactCenterActivity"
            android:label="通讯录"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>